{
  "env": {
    "node": true,
    "commonjs": false,
    "es2021": true
  },

  "extends": "eslint:recommended",
  "overrides": [],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "requireConfigFile": false,
    "babelOptions": {
      "parserOpts": {
        "plugins": ["importAssertions"]
      }
    }
  },

  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
